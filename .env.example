# ============================================
# Pyra Voice - Environment Variables
# Copy this file to .env and fill in the values
# ============================================

# ---- Required ----

# Google Gemini API Key (for voice AI)
GOOGLE_API_KEY=

# ---- Optional: Simli Avatar ----

# Simli.ai API Key (for avatar video rendering)
SIMLI_API_KEY=
# Simli Face ID
SIMLI_FACE_ID=

# ---- Optional: Supabase (conversation storage) ----

# Supabase Project URL
SUPABASE_URL=
# Supabase Anonymous Key
SUPABASE_ANON_KEY=
# Supabase Service Key (server-side, more privileges)
SUPABASE_SERVICE_KEY=

# ---- Server Config ----

# Port for the combined server (default: 3000)
PORT=3000
# Internal backend port (default: 3001, no need to expose)
BACKEND_PORT=3001
# CORS origin (default: * for development, set to your domain in production)
CORS_ORIGIN=*
# Node environment
NODE_ENV=production

# ---- Frontend (build-time) ----

# Override WebSocket URL (auto-detected if not set)
# NEXT_PUBLIC_WS_URL=wss://your-domain.com/ws
# Override API URL (auto-detected if not set)
# NEXT_PUBLIC_API_URL=https://your-domain.com
